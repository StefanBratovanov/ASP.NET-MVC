@model Bookmarks.Web.InputModels.BookmarkInputModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    
    @Html.LabelFor(x => x.Title)
    @Html.EditorFor(x => x.Title)
    @Html.ValidationMessageFor(x => x.Title)
    <br/>
    @Html.LabelFor(x => x.Url)
    @Html.EditorFor(x => x.Url)
    @Html.ValidationMessageFor(x => x.Url)
    <br />
    @Html.LabelFor(x => x.Description)
    @Html.EditorFor(x => x.Description)
    @Html.ValidationMessageFor(x => x.Description)
    <br />
    @Html.LabelFor(x => x.CategoryId)
    @Html.DropDownListFor(x => x.CategoryId, (IEnumerable<SelectListItem>)this.ViewBag.Categories)
    @Html.ValidationMessageFor(x => x.CategoryId)
    <br />
    <input type="submit" name="submit" value="Add Bookmark" />
}

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}